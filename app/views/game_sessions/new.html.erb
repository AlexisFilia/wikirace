<div class="banner">
  <% if user_signed_in? %>
    <%= simple_form_for @game_session do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "New Session", id: "new_session" %>
    <% end %>
  <% else %>
    <p>Please log-in to be able to create a Game Session...</p>
  <% end %>
</div>

